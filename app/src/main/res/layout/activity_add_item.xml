<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/expense_tv"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="112dp"
        android:hint="@string/expense"
android:textColor="@color/primary_color"
tools:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </EditText>

    <EditText
        android:id="@+id/expense_title_tv"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginHorizontal="32dp"
        android:hint="@string/expense_title"
        android:textColor="@color/primary_color"
        app:layout_constraintTop_toBottomOf="@id/expense_tv"
        android:layout_marginTop="8dp" />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
android:background="@android:color/transparent"
android:layout_marginTop="56dp"
app:layout_constraintTop_toBottomOf="@id/expense_title_tv"
app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
android:text="@string/add_button_text"
android:textColor="@color/accent_color"
android:drawableLeft="@drawable/ic_add_green"
</androidx.constraintlayout.widget.ConstraintLayout>